<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tigamitramalang"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consAtas"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@color/hijau">

        <TextView
            android:layout_width="223dp"
            android:layout_height="31dp"
            android:layout_marginTop="16dp"
            android:text="Tentang Kami"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.563"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="232dp"
            android:layout_height="57dp"
            android:layout_marginTop="68dp"
            android:text="Tentang Kami !!"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.089"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="53dp"
            android:layout_height="13dp"
            android:text="Hai Sobat !"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.988"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.932" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="43dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/timit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.726" />
    </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/pt_tiga_mitra_cab_malang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="162dp"
            android:layout_marginRight="112dp"
            android:layout_marginBottom="164dp"
            android:gravity="center"
            android:text="PT.Tiga Mitra Surabaya Cab Malang"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/kantormalang"
            android:layout_width="304dp"
            android:layout_height="146dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/kantormalang" />

        <TextView
            android:layout_width="341dp"
            android:layout_height="216dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="376dp"
            android:text="@string/article_text"
            android:gravity="center_vertical"
            android:textStyle="bold"/>
    </RelativeLayout>
</ScrollView>