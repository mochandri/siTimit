<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KalkulatorBata">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consAtas"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="@color/hijau">


        <TextView
            android:layout_width="198dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:text="Kalkulator Material"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.563"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="232dp"
            android:layout_height="57dp"
            android:layout_marginTop="48dp"
            android:text="Hitung Kebutuhan Bata Ringanmu Disini !!"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.089"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="53dp"
            android:layout_height="13dp"
            android:text="Hai Sobat !"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.988"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.932" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="43dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/timit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.726" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="337dp"
        android:layout_below="@+id/consAtas"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="14dp"
        android:background="#EAFCEC">

        <EditText
            android:id="@+id/lebar"
            android:layout_width="112dp"
            android:layout_height="30dp"
            android:ems="10"
            android:hint="Masukkan Lebar"
            android:inputType="textPersonName"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/panjang"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/panjang"
            android:layout_width="91dp"
            android:layout_height="32dp"
            android:ems="10"
            android:hint="Masukkan Panjang"
            android:inputType="textPersonName"
            android:textSize="9dp"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="62dp" />

        <TextView
            android:id="@+id/txt_lebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lebar"
            android:layout_marginBottom="16dp"
            android:text="Lebar Lantai (m)"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="10dp"
            app:layout_constraintBottom_toTopOf="@+id/lebar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_panjang"
            android:layout_width="91dp"
            android:layout_height="17dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:text="Panjang Lantai (m)"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="10dp"
            app:layout_constraintBottom_toTopOf="@+id/panjang"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.809" />

        <TextView
            android:id="@+id/txt_panjang2"
            android:layout_width="91dp"
            android:layout_height="17dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:text="Panjang Lantai (m)"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="10dp"
            app:layout_constraintBottom_toTopOf="@+id/panjang"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.809" />




    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>