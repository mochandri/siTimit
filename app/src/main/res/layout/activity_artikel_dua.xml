<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtikelDua"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/consAtas"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@color/hijau">

        <TextView
            android:layout_width="241dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:text="Baca Artikel dan Berita Lainnya!"
            android:textColor="@color/white"
            android:fontFamily="@font/robotoslab_black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="52dp"
            android:layout_height="35dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/timit" />
        <TextView
            android:layout_width="53dp"
            android:layout_height="13dp"
            android:text="Hai Sobat !"
            android:textColor="@color/white"
            android:fontFamily="@font/futuraptbold"
            android:textSize="10dp"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="-1dp"
            android:layout_marginLeft="335dp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clipToPadding="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:fontFamily="@font/futuraptbold"
                android:text="Tips dan Cara Menghitung Kebutuhan Panel Lantai"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/satuartikel"
                android:layout_width="380dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"
                android:src="@drawable/duaartikel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="-25dp"
                android:fontFamily="@font/robotoslab_regular"
                android:text="03 Februari 2022"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/jam"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="-19dp"
                android:src="@drawable/ic_jam" />

            <TextView
                android:id="@+id/clickdua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="-19dp"
                android:fontFamily="@font/robotoslab_regular"
                android:text="Tips dan Cara Menghitung Kebutuhan Panel Lantai"
                android:onClick="clickdua"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="8dp" />

            <ImageView
                android:id="@+id/library"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-19dp"
                android:src="@drawable/ic_folder" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isiartikeldua"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textSize="12dp"
                android:fontFamily="@font/robotoslab_regular"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="360dp"
                android:layout_height="300dp"
                android:id="@+id/duapanel"
                android:layout_marginTop="-100dp"
                android:layout_gravity="center"
                android:src="@drawable/duapanel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isiartikeldualanjutan"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-50dp"
                android:layout_marginRight="10dp"
                android:textSize="12dp"
                android:fontFamily="@font/robotoslab_regular"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="391dp"
                android:layout_height="300dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-90dp"
                android:layout_marginRight="10dp"
                android:background="#EAFCEC" >

                <TextView
                    android:id="@+id/txt_panjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/robotoslab_regular"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="12dp"
                    android:text="Panjang Lantai (m)" />

                <TextView
                    android:id="@+id/txt_lebar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="180dp"
                    android:fontFamily="@font/robotoslab_regular"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="12dp"
                    android:text="Lebar Lantai (m)" />

                <EditText
                    android:id="@+id/panjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="10dp"
                    android:fontFamily="@font/robotoslab_regular"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Masukkan Panjang" />

                <EditText
                    android:id="@+id/lebar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="10dp"
                    android:fontFamily="@font/robotoslab_regular"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="180dp"
                    android:hint="Masukkan Lebar" />

                <Button
                    android:id="@+id/hasildua"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/futuraptbold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="120dp"
                    android:text="HITUNG"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="119dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginBottom="60dp"
                    android:fontFamily="@font/futuraptbold"
                    android:text="Luas Lantai (M2)"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="126dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginBottom="56dp"
                    android:fontFamily="@font/futuraptbold"
                    android:text="Kebutuhan (M3)"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/twluas"
                    android:layout_width="72dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="230dp"
                    android:layout_marginLeft="55dp"
                    android:text=""
                    android:fontFamily="@font/futuraptbold"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/twvolume"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="230dp"
                    android:layout_marginLeft="225dp"
                    android:text=""
                    android:fontFamily="@font/futuraptbold"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/clickhubungi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masih Bingung? Hubungi CS Kami"
                android:textSize="12dp"
                android:fontFamily="@font/robotoslab_regular"
                android:textColor="@android:color/holo_green_dark"
                android:onClick="clickhubungi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isiartikeldualanjutann"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textSize="12dp"
                android:fontFamily="@font/robotoslab_regular"
                android:textColor="@color/black"/>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>